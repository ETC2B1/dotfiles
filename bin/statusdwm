get_keyboard_layout() {
	if [[ "$(skb -1)" == "Eng" ]]; then
	   echo -en "[EN]"
	else
	   echo -en "[RU]"
	fi
}

get_vol() {
	   awk -F"[][]" '/Left:/ { print $2 }' <(amixer sget Master)
}

get_bat() {
	  POWER=$(cat /sys/class/power_supply/BAT1/energy_now)
	  CAP=$(cat /sys/class/power_supply/BAT1/energy_full)
	  echo "scale = 2; $POWER / $CAP * 100" | bc
}
get_date() {
	   date +"%Y.%m.%d %R"
}
	  

while true; do
      	    xsetroot -name "$(get_date)"
	    sleep 1
done